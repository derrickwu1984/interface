<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd
		http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<!-- 1、指定当前服务的名字与工程名相同，不用与其他服务同名 -->
	<dubbo:application name="info-service-provider"></dubbo:application>
	<!-- 2、指定注册中心的位置 -->
	<dubbo:registry protocol="zookeeper" address="127.0.0.1:2181"></dubbo:registry>
	<!-- 3、指定通信规则：通信协议、端口  -->
	<dubbo:protocol name="dubbo" port="20080"></dubbo:protocol>
	<!-- 4、暴露服务  ref指向服务的真正 对象-->
<!-- 	<dubbo:service interface="com.wmx.gmall.service.UserService" ref="userServiceImpl"></dubbo:service> -->
	<dubbo:service interface ="com.inter.service.InfoService" ref = "infoServiceImpl"></dubbo:service>
	<!-- 定义服务的实现class -->
<!-- 	<bean id="userServiceImpl" class="com.wmx.service.impl.UserServiceImpl"></bean> -->
	<bean id="infoServiceImpl" class=""></bean>
	<!--连接监控中心  -->
	<dubbo:monitor protocol="registry"></dubbo:monitor>
</beans>
